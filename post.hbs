{{!< default}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<header class="main-header post-head">
</header>
<main class="content" role="main">
    <section class="{{post_class}} post-page-article">
        <header class="post-article-header">
            <img class="feature_image {{#if feature_image}}" src="{{feature_image}} {{else}}no-cover{{/if}}" />
            <h1 class="post-title">{{title}}</h1>
            <div class="other-info">
                <time class="post-date" datetime="{{date published_at format="MMMM DD, YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
                <article>{{#if tags}}<i class="fa fa-tag" aria-hidden="true"></i>{{tags}}{{/if}}</article>
            </div>
        </header>
        <section class="post-content">
            {{content}}
        </section>
        <footer class="post-footer">

        {{!-- Everything inside the #author tags pulls data from the author --}}


            <section class="share">
                <i class="fa fa-share-alt" aria-hidden="true"></i>
                <a class="icon-twitter" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden"><i class="fa fa-twitter" aria-hidden="true"></i></span>
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden"><i class="fa fa-facebook" aria-hidden="true"></i></span>
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden"><i class="fa fa-google-plus" aria-hidden="true"></i></span>
                </a>
            </section>

            {{!-- Email subscribe form at the bottom of the page --}}
            {{#if @labs.subscribers}}
            <section class="gh-subscribe">
                <h3 class="gh-subscribe-title">Subscribe to {{@blog.title}}</h3>
                <p>Get the latest posts delivered right to your inbox.</p>
                {{subscribe_form placeholder="Your email address"}}
                <span class="gh-subscribe-rss">or subscribe <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">via RSS</a> with Feedly!</span>
            </section>
            {{/if}}

        </footer>

    </section>
</main>

{{!-- Links to Previous/Next posts --}}
<aside class="read-next">
    {{#next_post}}
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
            <a class="read-more" href="{{url}}">Read Next</a>
        </section>
    {{/next_post}}
    {{#prev_post}}
        <section class="post">
            <h2>{{title}}</h2>
            <p>{{excerpt words="19"}}&hellip;</p>
            <a class="read-more" href="{{url}}">You Might Interest</a>
        </section>
    {{/prev_post}}
</aside>

{{/post}}
